# App Configuration
NODE_ENV=development
PORT=3000
APP_NAME=APC Backend
ADMIN_FRONTEND_URL=http://localhost:3001
PUBLIC_FRONTEND_URL=http://localhost:3002
BACKEND_URL=http://localhost:3000
TZ=Asia/Ho_Chi_Minh
DEFAULT_LOCALE=vi
DEBUG=false
API_PREFIX=api
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=anphat_chemical
DB_MIGRATIONS_RUN=false
DB_SYNC=false
DB_LOGGING=true
DB_LOGGER=advanced-console
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600
CACHE_MAX=100
REDIS_CONNECT_TIMEOUT=10000

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-min-32-characters
JWT_EXPIRES_IN=1800
JWT_REMEMBER_ME_EXPIRES_IN=2592000
JWT_REFRESH_EXPIRES_IN=604800
JWT_ISSUER=apc-backend
JWT_AUDIENCE=apc-frontend

# Security Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
BCRYPT_ROUNDS=10
JWT_SECRET_ROTATION=false
SESSION_TIMEOUT=1800
REMEMBER_ME_DURATION=2592000
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=900

# Upload Configuration
UPLOAD_DEST=./uploads
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_IMAGE_QUALITY=85
UPLOAD_THUMBNAIL_WIDTH=300
UPLOAD_THUMBNAIL_HEIGHT=300

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_REJECT_UNAUTHORIZED=true
EMAIL_FROM_NAME=APC Company
EMAIL_FROM=noreply@example.com
EMAIL_PREVIEW=true